---
import MainLayout from "@layouts/MainLayout.astro";
import type { PokemonListResponse } from "@interfaces/pokemon-list.response";
import PokemonCard from "@components/pokemons/PokemonCard.astro";

const response = await fetch("https://pokeapi.co/api/v2/pokemon");
const { results }: PokemonListResponse = await response.json();

const title = "Pokémon Static | Home";
---

<MainLayout title={title}>
    <h1 class="text-3xl">Pokémons list</h1>
    <hr />
    <section
        aria-label="Pokémons list"
        class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-5">
        {results.map(({name, url}) => <PokemonCard name={name} url={url} />)}
    </section>
</MainLayout>
